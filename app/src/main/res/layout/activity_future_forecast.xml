<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/light_black"
    tools:context=".futureForecast">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="10dp"
            android:gravity="center"
            android:text="@string/forcast"
            android:textColor="@color/white"
            android:textSize="32sp"

            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:backgroundTint="@color/black"
            app:cardCornerRadius="10dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/title">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginVertical="10dp"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/clickable1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/forcastDate1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="10dp"
                            android:text="12-01-2024"
                            android:textColor="@color/orange" />

                        <TextView
                            android:id="@+id/forcastDay1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="10dp"
                            android:text="Wednesday"
                            android:textColor="@color/orange" />
                    </LinearLayout>

                    <TextView
                        android:id="@+id/forcastWeather1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Cloudy"
                        android:textSize="18dp"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:textColor="@color/orange" />


                    <ImageView
                        android:id="@+id/forcastImage"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_weight="1"
                        android:layout_gravity="center"
                        android:src="@drawable/icon_humidity"
                        android:textColor="@color/orange" />

                </LinearLayout>
                <View
                    android:id="@+id/moreInfoLine"
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:layout_marginVertical="10dp"
                    android:visibility="gone"
                    android:layout_marginHorizontal="5dp"
                    android:background="@android:color/darker_gray"/>
                <LinearLayout
                    android:id="@+id/moreInfo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:visibility="gone"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/forcastMaxTemp1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="42℃"
                        android:textStyle="bold"
                        android:textSize="25dp"
                        android:padding="5dp"
                        android:layout_marginStart="10dp"
                        android:layout_marginBottom="10dp"
                        android:layout_gravity="top"
                        android:textColor="#EA0733" />
                    <View
                        android:layout_width="2dp"
                        android:layout_height="match_parent"
                        android:rotation="10"
                        android:layout_marginHorizontal="5dp"
                        android:background="@android:color/darker_gray"/>
                    <TextView
                        android:id="@+id/forcastMinTemp1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="25℃"
                        android:textStyle="bold"
                        android:textSize="20dp"
                        android:paddingTop="5dp"
                        android:layout_marginTop="10dp"
                        android:layout_gravity="bottom"
                        android:textColor="@color/ic_launcher_background" />
                    <View
                        android:layout_width="2dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:layout_marginHorizontal="5dp"/>

                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:src="@drawable/aqi_icon"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="AQI"
                        android:layout_marginHorizontal="10dp"
                        android:textStyle="bold"
                        android:gravity="center"
                        android:textColor="@color/ic_launcher_background" />

                    <TextView
                        android:id="@+id/forcastAQI1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="240"
                        android:textStyle="bold"
                        android:gravity="center"
                        android:layout_marginEnd="10dp"
                        android:textColor="@color/ic_launcher_background" />

                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

